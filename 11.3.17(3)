using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace baba
{
    class ti
    {
        static void Main()
        {
            var x = int.Parse(Console.ReadLine());
            var q = new int[x];
            for (int i = 0; i < x; i++)
            {
                q[i] =int.Parse(Console.ReadLine());                
            }            
            Console.WriteLine("Sum = {0}", q.Sum());
            Console.WriteLine("Min = {0}", q.Min());
            Console.WriteLine("Max = {0}", q.Max());
            Console.WriteLine("Average = {0}", q.Average());
        }
    }
}
